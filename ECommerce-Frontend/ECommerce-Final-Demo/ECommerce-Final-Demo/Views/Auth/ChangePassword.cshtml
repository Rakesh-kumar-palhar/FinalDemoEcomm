@model ECommerce_Final_Demo.Models.ViewModels.ChangePasswordViewModel

@{
    Layout = null;
}}

<h1>ChangePassword</h1>

<form asp-action="ChangePassword" method="post">
    <div class="mb-3">
        <!-- Changed form-group to mb-3 for Bootstrap 5 -->
        <label asp-for="CurrentPassword" class="form-label"></label> <!-- Added form-label class -->
        <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Enter current password" /> <!-- Added placeholder -->
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <!-- Changed form-group to mb-3 for Bootstrap 5 -->
        <label asp-for="NewPassword" class="form-label"></label> <!-- Added form-label class -->
        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" /> <!-- Added placeholder -->
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <!-- Changed form-group to mb-3 for Bootstrap 5 -->
        <label asp-for="ConfirmPassword" class="form-label"></label> <!-- Added form-label class -->
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" /> <!-- Added placeholder -->
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>