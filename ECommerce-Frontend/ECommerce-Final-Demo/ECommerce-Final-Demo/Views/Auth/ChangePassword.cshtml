@model ECommerce_Final_Demo.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<!-- Adding gray background and adjusting layout -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-8 col-lg-5 col-xl-4 p-4">
        <div class="card shadow-lg">
            <div class="card-header text-center bg-primary text-white">
                <h3>Change Password</h3>
            </div>
            <div class="card-body">
                <!-- Show success or error messages -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.Message
                    </div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="ChangePassword" method="post">
                    <!-- Current Password -->
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label"></label> <!-- Added form-label class -->
                        <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Enter current password" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label> <!-- Added form-label class -->
                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label> <!-- Added form-label class -->
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
