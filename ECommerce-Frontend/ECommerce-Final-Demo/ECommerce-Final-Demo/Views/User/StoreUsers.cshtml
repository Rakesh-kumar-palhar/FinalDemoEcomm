@model IEnumerable<ECommerce_Final_Demo.Models.ViewModels.UserViewModel>


<h3>List Of Users</h3>
<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>

<table class="table table-striped table-bordered"id="usertable">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile Number</th>
            <th>Role</th>
            <th>CreateDate</th>
            <th>IsActive</th>
            <th>Profile</th>
            <th>Store Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.MobileNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>@item.CreateDate.ToString("MM/dd/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <img src="@Url.Content("~/images/" + item.Profile)" alt="Profile Image" style="width:70px; height:auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete @item.FirstName @item.LastName?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#usertable').DataTable({ 

                "pageLength": 5,
                "lengthMenu": [5, 10, 25, 50],

                          "columnDefs": [
                    { "orderable": false, "targets": [-6,-4,-3, -1] }
                ],
                "dom": '<"top"f>rt<"bottom"lp><"clear">'
            });
    });
    </script>
}
