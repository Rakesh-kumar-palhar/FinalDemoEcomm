@model ECommerce_Final_Demo.Models.ViewModels.UserListViewModel

<h3>List Of Users</h3>
<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Users.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().MobileNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().Role)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().CreateDate)</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().IsActive)</th>
            <th>Profile</th>
            <th>@Html.DisplayNameFor(model => model.Users.First().StoreName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)

        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.MobileNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <img src="@Url.Content("~/images/" + item.Profile)" alt="Profile Image" style="width:70px; height:auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="pagination">
    <ul class="pagination">
        @if (Model.PageInfo.CurrentPage > 1)

        {
            <li class="page-item">
                <a class="page-link" asp-action="StoreUsers" asp-route-page="@(Model.PageInfo.CurrentPage - 1)" asp-route-PageSize="@Model.PageInfo.ItemPerPage">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)

        {
            <li class="page-item @(i == Model.PageInfo.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="StoreUsers" asp-route-page="@i" asp-route-PageSize="@Model.PageInfo.ItemPerPage">@i</a>
            </li>
        }
        @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages)

        {
            <li class="page-item">
                <a class="page-link" asp-action="StoreUsers" asp-route-page="@(Model.PageInfo.CurrentPage + 1)" asp-route-PageSize="@Model.PageInfo.ItemPerPage">Next</a>
            </li>
        }
    </ul>
</div>