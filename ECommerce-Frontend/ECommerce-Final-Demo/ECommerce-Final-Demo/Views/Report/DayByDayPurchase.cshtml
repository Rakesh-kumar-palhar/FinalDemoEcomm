@model IEnumerable<ECommerce_Final_Demo.Models.DayByDayPurchaseReportViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Day by Day Purchase Report</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Day by Day Purchase Report</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Store Name</th>
                    <th>Total Sales</th>
                    <th>Order Items</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Date.ToShortDateString()</td>
                        <td>@report.StoreName</td>
                        <td>@report.TotalSales.ToString("C")</td>
                        <td>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Item ID</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in report.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ItemId</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
